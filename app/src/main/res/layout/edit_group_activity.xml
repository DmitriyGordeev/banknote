<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout7">

        <TextView
            android:id="@+id/textView_groupNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Название группы"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16dp"
            android:layout_alignParentBottom="true" />

        <EditText
            android:id="@+id/editText_groupName"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView_groupNameLabel"
            android:inputType="textAutoCorrect|textVisiblePassword" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout7"
        android:id="@+id/relativeLayout8">

        <CheckBox
            android:id="@+id/checkBox_groupIsProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Доходная категория"
            android:textColor="@android:color/holo_blue_dark" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_groupConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:onClick="onGroupConfirm"
        android:text="Сохранить" />

    <Button
        android:id="@+id/button_groupCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_groupConfirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onGroupCancel"
        android:text="Отмена" />


</RelativeLayout>