<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.09">

        <TextView
            android:id="@+id/textAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:text="TextView"
            android:textColor="@color/colorDarkBlue"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView_bankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textAccountName"
            android:padding="8dp"
            android:text="TextView"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView_bankName"
            android:background="@color/colorGray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:paddingLeft="8dp"
                android:paddingTop="11dp"
                android:text="TextView"
                android:textColor="@android:color/background_light"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView_accountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.31"
                android:text="TextView"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>